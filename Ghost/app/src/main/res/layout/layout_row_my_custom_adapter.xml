<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:textSize="25sp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:id="@+id/player_ranking_row_textView"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/my_custom_adapter_text_image"
        android:id="@+id/medal_row_imageView"/>

    <TextView
        android:textSize="20sp"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/player_name_row_textView"/>

    <TextView
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:id="@+id/player_score_row_textView"/>

</LinearLayout>